@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="row">
    <div class="col-md-3">
        <div class="card mb-3" style="background-color: #ffa1a2; color: #000;">
            <div class="card-body">
                <h5 class="card-title">Toplam Müşteri</h5>
                <p class="card-text">@ViewBag.TotalCustomers</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card mb-3" style="background-color: #ffcc78; color: #000;">
            <div class="card-body">
                <h5 class="card-title">Toplam Ürün</h5>
                <p class="card-text">@ViewBag.TotalProducts</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card mb-3" style="background-color: #003475; color: #fff;">
            <div class="card-body">
                <h5 class="card-title">Bekleyen Sipariş</h5>
                <p class="card-text">@ViewBag.PendingOrders</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card mb-3" style="background-color: #006752; color: #fff;">
            <div class="card-body">
                <h5 class="card-title">Tamamlanan Sipariş</h5>
                <p class="card-text">@ViewBag.CompletedOrders</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-3">
        <div class="card mb-3" style="background-color: #43a047; color: #fff;">
            <div class="card-body">
                <h5 class="card-title">İptal Edilen Sipariş</h5>
                <p class="card-text">@ViewBag.CancelledOrders</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-3" style="background-color: #ffcc78; color: #000;">
            <div class="card-body">
                <h5 class="card-title">Toplam Gelir</h5>
                <p class="card-text">@ViewBag.TotalRevenue.ToString("C")</p>
            </div>
        </div>
    </div>
</div>

@using e_ticaret_proje.Models
@model List<Product>

<h2>Ürünler Listesi</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
           <th>Num</th>
           <th>Ürün Adı</th>
           <th>Fiyat</th>
           <th>Stok</th>
           <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>
                    <a href="Product/UpdateProduct/@item.ProductID"class="btn btn-sm btn btn-warning">Güncelle</a>
                    <a href="Product/DeleteProduct/@item.ProductID"class="btn btn-sm btn btn-danger">Sil</a>
                </td>            
                </tr>
        }
    </tbody>
</table>
<a href="Product/AddProduct" class="btn btn-sm btn-success">Yeni Ürün Ekle</a>

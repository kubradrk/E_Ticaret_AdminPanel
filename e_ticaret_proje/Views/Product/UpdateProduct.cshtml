@model e_ticaret_proje.Models.Product

<h2>Ürün Güncelleme Sayfası</h2>

<form method="post">
    @Html.Label("ID")
    @Html.TextBoxFor(x => x.ProductID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.Label("Fiyat")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.Label("Stok")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    <button class="btn btn-sm btn-outline-primary">Güncelle</button>
</form>
@model e_ticaret_proje.Models.Product
@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}
<h2>Ürün Ekleme Sayfası</h2>

<form method="post">
    @Html.Label("Kategori: ")
    @Html.DropDownListFor(x => x.CategoryID, (IEnumerable<SelectListItem>)ViewBag.Categories, "Kategori Seçiniz", new { @class = "form-control" })
    <br />
    @Html.Label("Ürün Adı: ")
    @Html.TextBoxFor(x => x.Name,new{@class="form-control"})
    <br />
    @Html.Label("Fiyat: ")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.Label("Stok: ")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-info">Ekle</button>

</form>
